{
  "name": "electron-cra-ts-boilerplate",
  "version": "0.1.1",
  "private": true,
  "main": "electron/main.js",
  "description": "Minimalist boilerplate Electron + CRA + TS",
  "author": {
    "email": "kresnahendri@gmail.com",
    "name": "Kresna Hendri"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kresnahendri/electron-cra-ts-boilerplate.git"
  },
  "scripts": {
    "dev:web": "BROWSER=none SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build:web": "react-scripts build",
    "test:web": "react-scripts test",
    "eject:cra": "react-scripts eject",
    "watch": "tsc -w",
    "dev:electron": "wait-on http://localhost:3000 && tsc electron/main.ts && electron .",
    "dev": "concurrently \"yarn dev:web\" \"yarn:dev:electron\"",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "compile": "electron-webpack",
    "prebuild": "tsc electron/main.ts && rimraf dist && yarn build:web",
    "build": "electron-builder build --mac --win --linux --publish never",
    "deploy": "electron-builder build --mac --win --linux --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "electronWebpack": {
    "commonSourceDirectory": "common",
    "main": {
      "sourceDirectory": "electron"
    },
    "renderer": {
      "sourceDirectory": null
    }
  },
  "build": {
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "extends": null,
    "files": [
      "dist/**/*",
      "./build/**/*",
      "./electron/main.js",
      "package.json"
    ],
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "directories": {
      "buildResources": "assets"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^1.0.1",
    "@emotion/react": "^11.1.1",
    "@emotion/styled": "^11.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/react-dom": "^17.0.0",
    "electron-updater": "^4.3.5",
    "eslint": "^7.14.0",
    "eslint-config-react-kresnahendri": "kresnahendri/eslint-config-react-kresnahendri",
    "framer-motion": "^2.9.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react-router-dom": "^5.1.6",
    "concurrently": "^5.3.0",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "electron-builder-squirrel-windows": "^22.9.1",
    "electron-rebuild": "^2.3.2",
    "electron-webpack": "^2.8.2",
    "electron-webpack-ts": "^4.0.1",
    "rimraf": "^3.0.2",
    "wait-on": "^5.2.0",
    "webpack-build-notifier": "^2.1.0"
  }
}
